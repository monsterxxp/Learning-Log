<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallking.dao.SysUserDAO">

    <resultMap id="sysUserResultMap" type="com.smallking.model.SysUser"></resultMap>

    <sql id="findDtoSql">
        select * from (
        select temp.*
        from sys_user temp
        ) t
    </sql>

    <select id="findByAccount" resultMap="sysUserResultMap">
        <include refid="findDtoSql"/>
        <where>
            t.account = #{account}
        </where>
    </select>
    <select id="findPage" parameterType="com.smallking.model.SysUser" resultMap="sysUserResultMap">
        <include refid="findDtoSql" />
        <where>
            <if test="val.name != '' and val.name != null">
                and upper(t.name) like CONCAT('%',upper(#{val.name}),'%')
                or upper(t.account) like CONCAT('%',upper(#{val.name}),'%')
            </if>
            <if test="val.status != '' and val.status != null">
                and status = #{val.status}
            </if>
        </where>
    </select>
</mapper>